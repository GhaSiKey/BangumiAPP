<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_history_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/search_history_title"
            android:textSize="14sp"
            android:textColor="@color/black_60" />

        <!-- 正常状态：垃圾箱图标 -->
        <ImageView
            android:id="@+id/iv_trash"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_trash" />

        <!-- 编辑状态：Delete all -->
        <TextView
            android:id="@+id/tv_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_history_delete_all"
            android:textSize="12sp"
            android:textColor="@color/black_45"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:visibility="gone" />

        <!-- 分隔线 -->
        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="4dp"
            android:background="@color/black_20"
            android:visibility="gone" />

        <!-- 编辑状态：Finish -->
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_history_finish"
            android:textSize="12sp"
            android:textColor="@color/black_45"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <com.gaoshiqi.otakumap.widget.SearchHistoryTagGroupView
        android:id="@+id/tag_group_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:tagSpacing="10dp"
        app:lineSpacing="10dp"
        app:tagTextSize="14sp"
        app:tagPaddingHorizontal="8dp"
        app:tagPaddingVertical="8dp"
        app:tagRadius="8dp"
        app:maxLines="1"
        app:defaultBgColor="@color/gray_f5"
        app:defaultTextColor="@color/black_60" />

</LinearLayout>
