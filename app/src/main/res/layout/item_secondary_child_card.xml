<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- 左侧封面图片容器 (宽度 = 屏幕 * 124/360, 宽高比 = 124:69) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3444"
        app:layout_constraintDimensionRatio="124:69">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 封面图片 -->
            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/gray_200"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- 序号 (居中显示在封面上) -->
            <TextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black_45"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="1" />

            <!-- 时长 (右下角) -->
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/bg_duration_tag"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                tools:text="04:25" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- 三点菜单按钮 (右下角) -->
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_more_vert_18"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/card_cover" />

    <!-- 标题 (最多2行) -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black_85"
        android:textSize="12sp"
        android:lineSpacingExtra="2dp"
        tools:text="Demon Slayer: Kimetsu no Yaiba - All Out Attack to D..."
        app:layout_constraintStart_toEndOf="@id/card_cover"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:layout_constraintTop_toTopOf="@id/card_cover" />

    <!-- 作者头像 -->
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_cover_placeholder_36"
        app:layout_constraintStart_toEndOf="@id/card_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- 作者名称 -->
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_60"
        android:textSize="10sp"
        tools:text="Animeholics"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar" />

    <!-- 播放量图标 -->
    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_play_count_14"
        app:layout_constraintStart_toEndOf="@id/card_cover"
        app:layout_constraintBottom_toBottomOf="@id/card_cover" />

    <!-- 播放量数字 -->
    <TextView
        android:id="@+id/tv_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black_45"
        android:textSize="10sp"
        tools:text="22.4K"
        app:layout_constraintStart_toEndOf="@id/iv_play_icon"
        app:layout_constraintTop_toTopOf="@id/iv_play_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_play_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
