<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.gaoshiqi.otakumap.BangumiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bangumi"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.gaoshiqi.otakumap.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.search.SearchTestActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.search.SearchOldTestActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.trending.AnimeTrendingActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.collection.MyCollectionActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.collection.v2.CollectionV2Activity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.detail.BangumiDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.schedule.ScheduleActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.schedule.BangumiTodayActivity"
            android:exported="false" />
        <activity
            android:name="com.gaoshiqi.otakumap.MainTabActivity"
            android:exported="true"
            android:theme="@style/Theme.Bangumi.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gaoshiqi.otakumap.TestActivity"
            android:exported="false" />
    </application>

</manifest>